---
import { siteConfig } from "../config";
import ProjectCard from "./ProjectCard.astro";

const samples = siteConfig.samples ?? [];
const projects = siteConfig.projects ?? [];
const hasAny = samples.length > 0 || projects.length > 0;
---

{hasAny && (
  <section id="projects" class="p-8 sm:p-12 md:p-16 lg:p-24">
    <div>
      <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-16 items-start">
        {/* LEFT TITLE */}
        <div class="lg:col-span-4">
          <h2 class="text-3xl sm:text-4xl md:text-5xl xl:text-7xl font-bold text-gray-900">
            Projects
          </h2>
          <div
            class="w-[75px] h-[5px] mt-2 rounded-full"
            style={`background-color: ${siteConfig.accentColor}`}
          />
        </div>

        {/* RIGHT CONTENT */}
        <div class="lg:col-span-8">
          {/* PILL NAV (only show pills that exist) */}
          <div class="flex flex-wrap items-center gap-2">
            {samples.length > 0 && (
              <a
                href="#work-samples"
                class="inline-flex items-center gap-2 px-3 py-2 rounded-full bg-gray-50 border border-gray-200
                       text-sm font-semibold text-gray-900 hover:bg-white hover:shadow-sm transition"
              >
                <span
                  class="w-2 h-2 rounded-full"
                  style={`background:${siteConfig.accentColor}`}
                />
                Work Samples
                <span class="text-xs text-gray-500">({samples.length})</span>
              </a>
            )}

            {projects.length > 0 && (
              <a
                href="#work-projects"
                class="inline-flex items-center gap-2 px-3 py-2 rounded-full bg-gray-50 border border-gray-200
                       text-sm font-semibold text-gray-900 hover:bg-white hover:shadow-sm transition"
              >
                <span
                  class="w-2 h-2 rounded-full"
                  style={`background:${siteConfig.accentColor}`}
                />
                Personal Projects
                <span class="text-xs text-gray-500">({projects.length})</span>
              </a>
            )}
          </div>

          {/* GROUPS */}
          <div class="mt-8 space-y-12">
            {samples.length > 0 && (
              <div id="work-samples" class="scroll-mt-28">
                <div class="flex items-center gap-4 mb-6">
                  <h3 class="text-xl sm:text-2xl font-bold text-gray-900">
                    Work Samples
                  </h3>
                  <div class="h-px flex-1 bg-gray-200" aria-hidden="true" />
                </div>

                <div class="space-y-8">
                  {samples.map((project, index) => (
                    <ProjectCard
                      project={project}
                      index={index}
                      accentColor={siteConfig.accentColor}
                    />
                  ))}
                </div>
              </div>
            )}

            {projects.length > 0 && (
              <div id="work-projects" class="scroll-mt-28">
                <div class="flex items-center gap-4 mb-6">
                  <h3 class="text-xl sm:text-2xl font-bold text-gray-900">
                    Personal Projects
                  </h3>
                  <div class="h-px flex-1 bg-gray-200" aria-hidden="true" />
                </div>

                <div class="space-y-8">
                  {projects.map((project, index) => (
                    <ProjectCard
                      project={project}
                      index={index}
                      accentColor={siteConfig.accentColor}
                    />
                  ))}
                </div>
              </div>
            )}
          </div>
        </div>
      </div>
    </div>
  </section>
)}
